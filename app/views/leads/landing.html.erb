<div class='row'>
  <div class='small-12 columns'>
    <h1>Codaccino</h1>
    <h3>Find Coffee, wifi, and friends FAST!</h3>
    <ul class = 'no-bullet'>
      <li>Avoid crappy Corporate Coffeshops</li>
      <li>Work in a productive environment</li>
      <li>Make friends as you work </li>
    </ul>
  </div>
  <%= render 'form' %>
</div>
<div class = 'row'>
  <% flash.each do |key,value| %>
      <div class = "alert-box <%= flash_class(key) %>">
          <%= value %>
      </div>
  <% end %>
</div>
<% @shops.each do |shop|%>
  <%= render 'shared/shops_index', shop: shop %>
<% end %>
