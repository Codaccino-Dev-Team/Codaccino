<div class = 'row highlight'>
  <div class='shop'>
    <h1><%= link_to shop.name, shop %></h1>
  </div>
</div>

<div class = 'row'>
  <div class='shop'>

    <h2><%= shop.address %></h2>
    <div class = 'row'>
      <div class = 'small-6 columns'>
        <%= image_tag(shop.shop_image) if shop.shop_image? %>
      </div>
      <div class = 'small-6 columns'>
        <ul class = 'no-bullet'>
          <li>Wifi Up: <%= shop.wifi_up %></li>
          <li>Wifi Down: <%= shop.wifi_down %></li>
          <li>Power: <%= shop.outlet_rating %></li>
          <li>Noise: <%= shop.noise %></li>
					<li>Rate this shop:</li>
					<%@shop = shop%>
					<li><%= render 'shops/rate_shop_form', shop: shop %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
